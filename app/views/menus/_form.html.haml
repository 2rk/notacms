= form_for @menu do |f|
  - if @menu.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menu.errors.count, 'error')} prohibited this menu from being saved:"
      %ul
        - @menu.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
